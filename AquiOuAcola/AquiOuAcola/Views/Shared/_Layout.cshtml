<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aqui ou Acolá</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
</head>
<body>
    
    <div class="container">

        <header>
            <nav class="navbar navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/Home/Index">
                        <img src="/src/AquiOuAcola.png" alt="" width="100" height="50">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample" style="background-color: #ED4032;">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>
        </header>

        <div class="offcanvas offcanvas-end d-flex flex-column flex-shrink-0 p-3" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel" style="width: 400px; background-color: #ED4032; color: white;">

            <div style="padding: 25px">
                <button type="button" class="btn-close btn-close-white text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>

                <div class="nav-item text-center" style="display: block; margin-top:25px; margin-bottom:50px;">
                    <div>
                        @{
                            if (User.IsInRole("AcessarCursos"))
                            {
                                <img src="~/src/FotoDePerfil.png" alt="" width="175" height="175" class="rounded-circle me-2">
                            }
                            else
                            {
                                <img src="~/src/FotoDePerfil.png" alt="" width="175" height="175" class="rounded-circle me-2">
                            }
                        }
                    </div>
                    <div style="font-size: 32px;">
                        @{
                            if (User.IsInRole("AcessarCursos"))
                            {
                                var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                                var Nome = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Name).Value;

                                <strong>@Nome</strong>
                            }
                            else
                            {
                                <strong>Faça parte!</strong>
                            }
                        }
                    </div>
                    <div>
                        @{
                            if (User.IsInRole("AcessarCursos"))
                            {
                                <a class="btn btn-outline-light btn-sm" href="~/Login/Logoff">Sair</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-light btn-sm" href="~/Login/Entrar">Entrar</a>
                            }
                        }
                    </div>
                </div>

                <ul class="nav nav-pills flex-column mb-auto">
                    <li>
                        <a href="/Home/Index" class="nav-link link-light">
                            <!--<i class="bi bi-search"></i>-->
                            Buscador
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Usuarios/Perfil" class="nav-link link-light">
                            <!--<i class="bi bi-person-fill"></i>-->
                            Perfil
                        </a>
                    </li>
                    <li>
                        <a href="/Cursos/Create" class="nav-link link-light">
                            <!--<i class="bi bi-laptop"></i>-->
                            Compartilhar
                        </a>
                    </li>
                    <li>
                        <a href="/Usuarios/Perfil" class="nav-link link-light">
                            <!--<i class="bi bi-laptop"></i>-->
                            Salvos
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-light">
                            <!--<i class="bi bi-info-circle"></i>-->
                            Dúvidas
                        </a>
                    </li>
                    <li>
                        <a href="/Usuarios/Configuracoes" class="nav-link link-light">
                            <!--<i class="bi bi-gear-fill"></i>-->
                            Configurações
                        </a>
                    </li>
                </ul>
            </div>

        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!--
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - AquiOuAcola - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        -->

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
