@model AquiOuAcola.Entidades.Usuarios

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="cadastroMain">
    <h1 class="text-center">Faça parte do buscador!</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="row">
            <div id="displayfoto">
                <div>
                    <img src="~/src/FotoDePerfil2.png" id="fotoperfil" />
                </div>
                <div>
                    <input type="file" name="foto" required />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="nome" class="control-label">Nome:</label>
                    <input asp-for="nome" class="form-control input" required />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sobrenome" class="control-label">Sobrenome:</label>
                    <input asp-for="sobrenome" class="form-control input" required />
                    <span asp-validation-for="sobrenome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cidade" class="control-label">Cidade:</label>
                    <input asp-for="cidade" class="form-control input" required />
                    <span asp-validation-for="cidade" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="email" class="control-label">E-mail:</label>
                    <input asp-for="email" class="form-control input" required />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="senha" class="control-label">Senha:</label>
                    <input asp-for="senha" type="password" class="form-control input" required />
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Confirme a senha:</label>
                    <input class="form-control input" type="password" required />
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>

        <div class="row">
            <div class="d-flex justify-content-between" style="margin-top: 50px">
                <div class="text-center" id="botao2">
                    <i class="bi bi-arrow-left"></i>
                    <input type="submit" value="Voltar para o Entrar" style="padding-left: 10px;" />
                </div>

                <div class="text-center" id="botao1">
                    <input type="submit" value="Finalizar cadastro" style="padding-right: 10px;" />
                    <i class="bi bi-arrow-right"></i>
                </div>
            </div>
        </div>

    </form>
    <footer></footer>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
