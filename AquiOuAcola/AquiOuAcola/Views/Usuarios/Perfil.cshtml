@model List<AquiOuAcola.Entidades.CursoF>

@{
    ViewData["Title"] = "Cursos salvos";
}

<div class="container" style="margin-top: 50px;">

    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-2" style="margin: 15px;">
                <div id="cursoPerfil">
                    <div id="cursoFPerfil">
                        <img src="~/Imagens/@item.Curso.foto" width="200" height="200" />
                    </div>
                    <div id="cursoCPerfil">
                        <h6>@item.Curso.nome</h6>
                        Adicionado por <a>Gabriel Oliveira</a>
                        <br />
                        <br />
                        <div class="d-flex justify-content-between">
                            <div>
                                @item.Curso.gratuito
                            </div>
                            <div>
                                <a class="btn btn-outline-info btn-sm">Saber mais</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="text-center" id="cursoVoltar">
            <i class="bi bi-arrow-left"></i>
            <a asp-controller="Home" asp-action="Index" style="padding-left: 10px;">Voltar para o Buscador</a>
        </div>
    </div>
    <footer></footer>
</div>
