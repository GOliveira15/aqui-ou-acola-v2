@{
    ViewData["Title"] = "Entrar";
}

<br />

@if (TempData["erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["erro"]
    </div>
}

<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div id="entrar">
                <div class="text-center">
                    <img src="~/src/AquiOuAcola.png" style="width: 200px; height:100px; max-width: 100%; margin-top: 25px; margin-bottom: 15px;" />
                </div>

                <br />
                <h2>Entrar</h2>
                <br />

                <form action="/Login/Entrar" method="post">
                    <div class="form-group">
                        <label class="control-label">E-mail:</label>
                        <input type="text" name="email" class="form-control input" required />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Senha:</label>
                        <input type="password" name="senha" class="form-control input" required />
                        <div class="d-block text-center">
                            <a href="" id="esqSenha">ESQUECEU A SUA SENHA?</a>
                        </div>
                    </div>

                    <div id="entrarBotoes">
                        <div>
                            <a asp-controller="Usuarios" asp-action="Create" class="btn btn-outline-primary">Cadastrar-se</a>
                        </div>
                        <div style="margin-left: 5px;">
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </div>
                    </div>

                </form>

                <div class="text-center" id="cursoVoltar">
                    <i class="bi bi-arrow-left"></i>
                    <a asp-controller="Home" asp-action="Index" style="padding-left: 10px;">Voltar para o Buscador</a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

    <br />

    <footer></footer>
</div>